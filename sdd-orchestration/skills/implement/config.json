{
  "commit": {
    "format": "{type}({scope}): {message}",
    "types": ["feat", "fix", "refactor", "test", "docs", "chore", "style"],
    "scopes": {
      "auto_detect": true,
      "from_task": true,
      "fallback": "general"
    },
    "include_task_id": true,
    "task_id_position": "suffix",
    "task_id_format": "[{task_id}]",
    "examples": [
      "feat(auth): add JWT token validation [TASK-001]",
      "fix(api): handle null response [TASK-002]",
      "test(auth): add login integration tests [TASK-003]",
      "refactor(utils): extract common helpers [TASK-004]"
    ],
    "rules": {
      "max_subject_length": 72,
      "require_scope": false,
      "require_task_id": true,
      "allowed_types_only": true
    }
  },
  "implementation": {
    "one_task_one_commit": true,
    "verify_before_commit": true,
    "auto_stage_changes": true,
    "commit_on_task_complete": true
  },
  "hooks": {
    "pre_commit": {
      "lint": true,
      "type_check": true,
      "test": false
    }
  }
}
